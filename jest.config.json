{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
        "<rootDir>/hyperdeploy/src",
        "<rootDir>/cdn",
        "<rootDir>/resolver",
        "<rootDir>/registry-sync"
    ],
    "testMatch": [
        "**/__tests__/**/*.ts",
        "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
        "**/src/**/*.ts",
        "!**/node_modules/**",
        "!**/*.d.ts",
        "!**/dist/**"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "moduleFileExtensions": [
        "ts",
        "js",
        "json"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    }
}